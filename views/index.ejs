<%- include("partials/header.ejs") %>

    <!-- Banner Section -->
    <div class="banner">
        <div class="banner-content">
            <h1 class="mb-4 tophead">Welcome To SILO Studio</h1>
            <p class="lead">
                Explore a vast collection of high-quality images across various categories. Use our search feature or browse through categories like nature, space, sports, and more to find the perfect images for your projects.
            </p>
    
            <div style="display: flex; justify-content: space-between;">
            <form action="/search" method="post">
                <button class="explore" type="submit"> Pictures </button>
            </form>
            <form action="/video" method="post">
                <button class="explore" type="submit">Videos </button>
            </form></div>
           
        </div>
    </div>

    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
          <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 text-light mb-3">Explore Stunning Photos and Videos</h1>
            <p class="col-lg-8 fs-5 text-light">Discover a vast collection of high-quality photos and engaging videos across various categories. Enjoy exploring nature, space, sports, entertainment, and more.</p>
          </div>
          <div class="col-md-10 mx-auto col-lg-5">
            <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary">
              <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
              </div>
              <div class="checkbox mb-3">
                <label>
                  <input type="checkbox" value="remember-me"> Remember me
                </label>
              </div>
              <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
              <hr class="my-4">
              <small class="text-body-secondary">By clicking Sign up, you agree to the terms of use.</small>
            </form>
          </div>
        </div>
      </div>

