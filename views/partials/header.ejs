            margin-bottom: 30px;
        }
        header img {
            width: 50px;
            height: 50px;
            margin-right: 15px;
        }
        .banner {
            background-image: url('https://images.pexels.com/photos/1087735/pexels-photo-1087735.jpeg?cs=srgb&dl=pexels-minan1398-1087735.jpg&fm=jpg');
            background-size: cover;
            background-position: center;
            height: 85vh; /* Adjust the height as needed */
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-align: center;
            position: relative;
        }
        .banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Dark overlay */
            z-index: 1;
        }
        .explore {
            background-color: cadetblue;
            padding: 20px;
            font-size: 40px;
            border-radius: 20px;
            opacity: 0.5;
            color: white;
            min-width: 300px;
            transition: 0.5s;
        }
        .explore:hover{
            background-color:rgb(13, 232, 240) ;            
        }
        .lead {
            max-width: 800px;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size: 30px;
            opacity: 0.5;
        }
        .tophead {
            font-family:'Courier New', Courier, monospace;
            font-size: 40px;
            opacity: 0.6;
        }
        .banner-content {
            position: relative;
            z-index: 2;
        }
        .blockquote {
            font-style: italic;
        }
        .navbar-nav .nav-link {
            color: #fff; /* Light text color for nav links */
        }
        .navbar-toggler-icon {
            background-color: #fff; /* Color for toggler icon */
        }
        .dropdown-menu {
            background-color: #343a40; /* Dark background color for dropdown */
        }
        .dropdown-item {
            color: #fff !important; /* Light text color for dropdown items */
        }
        .dropdown-item:hover {
            background-color: #444; /* Dark hover color for dropdown items */
        }
        @media (max-width: 768px) {
            .banner {
                height: 50vh; /* Adjust the height for smaller screens */
            }
            .explore {
                font-size: 20px;
                padding: 10px;
                min-width: 150px;
            }
            .lead {
                font-size: 20px;
                padding: 0 10px;
            }
            .tophead {
                font-size: 30px;
            }
        }
